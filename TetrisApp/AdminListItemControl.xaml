<UserControl x:Class="TetrisApp.AdminListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TetrisApp"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Border BorderBrush="White" BorderThickness="5" Background="LightGray">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Text="PlaceHolderName" x:Name="userUserName"
                       FontSize="20" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="PlaceHolderPass" x:Name="userPassword"
                       FontSize="20" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="5" Text="PlaceHolderLang" x:Name="userLanguage"
                       FontSize="20" VerticalAlignment="Center"/>
            <CheckBox Grid.Column="6" x:Name="IsAdminCheckBox" HorizontalAlignment="Center"
                      VerticalAlignment="Center" IsEnabled="False"/>
        </Grid>
    </Border>
</UserControl>
