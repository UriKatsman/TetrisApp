<Page x:Class="TetrisApp.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp"
      mc:Ignorable="d" 
      d:DesignHeight="545" d:DesignWidth="860"
      Title="SettingsPage">

    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="8" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Tetris" FontSize="50" Background="Transparent" Foreground="red" FontWeight="Bold" FontFamily="Arial"/>
        
        <Image Grid.Row="1" Grid.Column="1" MouseDown="GoBack" Source="/Back.png"/>

        <Image Grid.Column="3" Grid.Row="5" Source="/TranslateIcon.png"/>
        <ComboBox x:Name="LanguagesComboBox" Grid.Column="5" Grid.Row="5" Grid.ColumnSpan="2" FontSize="30"/>

        <!--
        <Slider Grid.Column="5" Grid.Row="7" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
        <Image Grid.Column="3" Grid.Row="7" Source="/VolumeIcon.png"/>
        -->
    </Grid>
</Page>

