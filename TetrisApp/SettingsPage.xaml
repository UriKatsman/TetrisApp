<Page x:Class="TetrisApp.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp"
      mc:Ignorable="d" 
      d:DesignHeight="545" d:DesignWidth="860"
      Title="SettingsPage">

    <Page.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E3B70" Offset="0.0"/>
            <GradientStop Color="#2E5AA7" Offset="0.5"/>
            <GradientStop Color="#4B7ED4" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="TetrisTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" Direction="320" Color="#0A1A3F" BlurRadius="5" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#DCE8FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SettingsCategoryStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Direction="320" Color="#0A1A3F" BlurRadius="3" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="#4B7ED4"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Tetris Blocks Background Elements (Decorative) -->
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="#64A7F7" Width="30" Height="30" HorizontalAlignment="Left" Opacity="0.6"/>
        <Rectangle Grid.Row="3" Grid.Column="8" Fill="#3563B3" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0.6"/>
        <Rectangle Grid.Row="7" Grid.Column="1" Fill="#A2C0F7" Width="20" Height="80" VerticalAlignment="Bottom" Opacity="0.4"/>
        <Rectangle Grid.Row="10" Grid.Column="8" Fill="#64A7F7" Width="60" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Opacity="0.5"/>

        <!-- Main Logo/Title -->
        <Border Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="8" HorizontalAlignment="Center" CornerRadius="15" Padding="30,5">
            <TextBlock Text="TETRIS" Style="{StaticResource TetrisTitle}" />
        </Border>

        <!-- Back Button -->
        <Border Grid.Row="1" Grid.Column="1" Width="50" Height="50" CornerRadius="25" Background="#64A7F7" Opacity="0.9" MouseDown="GoBack">
            <Image Source="/Back.png" Stretch="Uniform" Margin="12"/>
        </Border>

        <!-- Settings Title -->
        <TextBlock Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" HorizontalAlignment="Center" Text="Settings" Style="{StaticResource SettingsCategoryStyle}" 
                  VerticalAlignment="Center"/>

        <!-- Language Section - Keeping in one line as original -->
        <TextBlock x:Name="LanguageTXT" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Text="Language:" Style="{StaticResource LabelStyle}" 
                  HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Border Grid.Row="7" Grid.Column="3" Style="{StaticResource IconContainerStyle}" 
               HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/TranslateIcon.png" Stretch="Uniform" Margin="12"/>
        </Border>

        <!-- Standard ComboBox with styling but no custom template to ensure it functions correctly -->
        <ComboBox Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="4" x:Name="LanguagesComboBox" 
                 Width="250" Height="45" FontSize="28" FontFamily="Arial"
                 Background="#E6F0FF" Foreground="#1E3B70" BorderBrush="#A2C0F7" BorderThickness="2"
                 VerticalAlignment="Center" HorizontalAlignment="Left">
            <ComboBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#E6F0FF"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#4B7ED4"/>
            </ComboBox.Resources>
        </ComboBox>

        <!-- Animated Tetris Block (Optional - add animation code separately) -->
        <Canvas Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="10">
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#64A7F7" Opacity="0.3" Canvas.Left="50" Canvas.Top="20"/>
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#A2C0F7" Opacity="0.3" Canvas.Left="70" Canvas.Top="20"/>
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#4B7ED4" Opacity="0.3" Canvas.Left="90" Canvas.Top="20"/>
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#1E3B70" Opacity="0.3" Canvas.Left="70" Canvas.Top="0"/>
        </Canvas>
    </Grid>
</Page>