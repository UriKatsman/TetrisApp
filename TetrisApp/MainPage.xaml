<Page x:Class="TetrisApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="545" d:DesignWidth="860"
      Title="MainPage">

    <Page.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E3B70" Offset="0.0"/>
            <GradientStop Color="#2E5AA7" Offset="0.5"/>
            <GradientStop Color="#4B7ED4" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4B7ED4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3563B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E3B70"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TetrisTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" Direction="320" Color="#0A1A3F" BlurRadius="5" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#DCE8FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Background" Value="#64A7F7"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Tetris Blocks Background Elements (Decorative) -->
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="#64A7F7" Width="30" Height="30" HorizontalAlignment="Left" Opacity="0.6"/>
        <Rectangle Grid.Row="3" Grid.Column="3" Fill="#3563B3" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0.6"/>
        <Rectangle Grid.Row="7" Grid.Column="1" Fill="#A2C0F7" Width="20" Height="80" VerticalAlignment="Bottom" Opacity="0.4"/>
        <Rectangle Grid.Row="10" Grid.Column="3" Fill="#64A7F7" Width="60" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Opacity="0.5"/>

        <!-- Main Logo/Title -->
        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalAlignment="Center" CornerRadius="15" Padding="30,5">
            <TextBlock Text="TETRIS" Style="{StaticResource TetrisTitle}" />
        </Border>

        <!-- Welcome Message -->
        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" x:Name="greetingTXT"
                   Text="Hello " Style="{StaticResource LabelStyle}"/>

        <!-- Navigation Buttons -->
        <!--
        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource IconButtonStyle}" MouseDown="GoToSettings">
            <Image Source="/SettingsButton.png" Stretch="Uniform" Margin="12"/>
        </Border>
        -->

        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource IconButtonStyle}" MouseDown="GoBack">
            <Image Source="/Back.png" Stretch="Uniform" Margin="12"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Style="{StaticResource IconButtonStyle}" MouseDown="ToFriends">
            <materialDesign:PackIcon MouseDown="ToFriends" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Kind="People" Width="45" Height="45" Foreground="White"/>
        </Border>

        <!-- Play Button -->
        <Button Grid.Row="6" Grid.Column="2" Style="{StaticResource ModernButton}" Width="220" 
                x:Name="PlayButton" Click="PlayBtn" FontWeight="Bold">
            <TextBlock x:Name="PlayButtenText" Text="Play" FontWeight="Bold" FontSize="30"/>
        </Button>

        <!-- High Score -->
        <Border Grid.Row="9" Grid.ColumnSpan="3" Grid.Column="1" Background="#2E5AA7" 
                CornerRadius="10" Opacity="0.7" Margin="100,5">
            <TextBlock x:Name="HighScoreTXT" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Text="Highest Score: " Style="{StaticResource LabelStyle}"/>
        </Border>
        <!-- Settings Button -->
        <Border Grid.Row="1" Grid.Column="3" Width="50" Height="50" CornerRadius="25" Background="#64A7F7" Opacity="0.9" MouseDown="GoToSettings">
            <Image Source="/SettingsButton.png" Stretch="Uniform" Margin="12"/>
        </Border>
        <!-- Animated Tetris Block (Optional - add animation code separately) -->
        <Canvas Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="5">
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#64A7F7" Opacity="0.3" Canvas.Left="50" Canvas.Top="20"/>
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#A2C0F7" Opacity="0.3" Canvas.Left="70" Canvas.Top="20"/>
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#4B7ED4" Opacity="0.3" Canvas.Left="90" Canvas.Top="20"/>
            <Polygon Points="0,0 20,0 20,20 0,20" Fill="#1E3B70" Opacity="0.3" Canvas.Left="70" Canvas.Top="0"/>
        </Canvas>
    </Grid>
</Page>